<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.ofir.car_imulator.playMedia"
    tools:showIn="@layout/activity_play_media"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#f5f5dc">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_weight="0.31">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:layout_weight="1.49"
                android:src="@android:drawable/ic_lock_silent_mode_off"
                android:onClick="onClickSilence"
                android:background="@android:drawable/toast_frame" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:layout_weight="1.49"
                android:src="@android:drawable/ic_media_play"
                android:onClick="onClickPlay"
                android:background="@android:drawable/toast_frame" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:layout_weight="1.49"
                android:src="@android:drawable/ic_media_pause"
                android:onClick="onClickPause"
                android:background="@android:drawable/toast_frame" />
        </LinearLayout>



        <ListView
            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:id="@+id/listViewPlayMedia"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="#5DB0FD"
            android:focusable="true" />

    </LinearLayout>

        </RelativeLayout>

</RelativeLayout>
